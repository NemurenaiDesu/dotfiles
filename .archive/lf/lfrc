cmd setwallpaper ${{
	~/dotfiles/scripts/wallpaper-selector "$f"
}}

cmd quitcd ${{
	echo "1" > "/tmp/lf-shellcd-changecwd"
	lf -remote "send $id quit"
}}

cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd zip %zip -r "$f.zip" "$(dirname "$f")"
cmd tar %tar cvf "$(basename "$f").tar" -C "$(dirname "$f")" "$(basename "$f")"
cmd targz %tar cvzf "$(basename "$f").tar.gz" -C "$(dirname "$f")" "$(basename "$f")"
cmd tarbz2 %tar cjvf "$(basename "$f").tar.bz2" -C "$(dirname "$f")" "$(basename "$f")"

cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}
    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

#cmd clear_trash %trash-empty

cmd restore_trash ${{
  trash-restore
}}

cmd stripspace %stripspace "$f"
